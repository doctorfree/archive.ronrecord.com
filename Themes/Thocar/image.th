<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
#c// ###################################################################
#c// Album Theme by David Ljung Madison based on
#c// generic SimmerTheme by Dave Simmer of DaveWeb.com
#c// -- Auto generated by http://MarginalHacks.com/Hacks/album/simmer_theme
#c// ###################################################################
#c//
<:
  # Image arrays are: name, width, height
  sub img_src { print "<img src='$PATH/$_[0]' width='$_[1]' height='$_[2]' $_[3] alt='$_[4]' border='0'>" if ($_[1]); }

  # Path setting - this is the path to the images
  $PATH = Theme_URL();

  # Icons/graphics
  @Bar_L =      ("Bar_L.png", 27, 20);
  @Bar_M =      ("Bar_M.png", "90%", 20);
  @Bar_R =      ("Bar_R.png", 27, 20);
  @More =       ("More.png", 42, 18);
  @Back =       ("Back.png", 32, 24);
  @Next =       ("Next.png", 25, 32);
  @Prev =       ("Prev.png", 25, 32);

  # Thumbnail border
  $X = Image_Page() ? Image_Width() : Option('x');
  $Y = Image_Page() ? Image_Height() : Option('y');
  @ThBord_L =	("tho_left.png", 39, $Y-0-0);
  @ThBord_R =	("tho_right.png", 41, $Y-0-0);
  @ThBord_T =	("tho_top.png", $X+39+41-0-0, 39);
  @ThBord_B =	("Null.gif", $X+39+2-0-0, 41);

  # Texts
  $backText = "Up";
  $prevText = "(previous) ";
  $nextText = "(next) ";
:>//
#c//
#c// Everything beyond here is the same for the generic DaveWeb image theme..
<html>
<head>
    <link REL="stylesheet" TYPE="text/css" href="<: print $PATH; :>/common.css">
    <link REL="stylesheet" TYPE="text/css" href="<: print $PATH; :>/image.css">
    <meta http-equiv="content-type" content="text/html;charset=ISO-8859-15">
    <: Meta() :>
    <title><:=Image_Name() :></title>
    <link rel="prev" href=<: Set_Image_Prev(); print Image_Page_URL(); :> >
    <link rel="next" href=<: Set_Image_Next(); print Image_Page_URL(); :> >
    <link rel="up" href=<:= Back() :> >
</head>

<body>

    <div id="top-div"></div>

    <div id="hierarchy-div-box">
        <div id="hierarchy-div">
            <: pJoin_Parent_Albums(" : "); :>
        </div>
    </div>
    <div id="up-div-box">
        <div id="up-div">
            <:
                $back=Back();
                print "<a href=$back>";
                $imgAttributes = "align='middle' title='" . $backText . "'";
                @Back ? img_src(@Back,$imgAttributes) : print $backText;
                print "</a>\n";
            :>
        </div>
    </div>

    <div align="center">
        <nobr><:img_src(@Bar_L); img_src(@Bar_M); img_src(@Bar_R);:></nobr>
    </div>

  <: Set_Image_Prev() :>//PREV
  <div id="prev-div">
    <a href=<:=Image_Page_URL():>>
      <:
        $imgAttributes = "title='" . Image_Name() . "'";
        img_src(@Prev, $imgAttributes);
      :>
    </a>
  </div>
	  
  <: Set_Image_Next() :>//NEXT
  <div id="next-div">
    <a href=<:=Image_Page_URL():>>
      <:
        $imgAttributes = "title='" . Image_Name() . "'";
        img_src(@Next, $imgAttributes);
      :>
    </a>
  </div>
	
		<table border="0" cellpadding="0" cellspacing="0" width="100%">
#c//
#c// Prev/caption/next
#c//
			<tr valign='top'>
				<td width="25%">

				</td>

				<td width="50%" align="center">
<: Set_Image_This() :>//	CAPTION

					<div id="title-div">
							<a href=<:=Image_URL():>>
						<:=Image_Name():></a>
					</div>
					<br />
					<span class="caption"><:pImage_Caption():></span>
				</td>

				<td width="25%">
				</td>
			</tr>
		</table>


		<table border="0" cellpadding="0" cellspacing="0" width="100%">

<: Set_Image_This() :>//

#c//
#c// The image
#c//
			<tr>
				<td colspan="3" valign="top" width="100%">
					<div align="center"><br />

#c// All corners
<: if (@ThBord_LB) { _:>
						<table border='0' cellpadding='0' cellspacing='0'>
							<tr>
								<td colspan='3'><:img_src(@ThBord_TL):><:img_src(@ThBord_T):><:img_src(@ThBord_TR):></td>
							</tr> <tr>
								<td><:img_src(@ThBord_LT):></td>
								<td rowspan='3'><a href=<:=Image_URL():>><:pImage_Src():></a></td>
								<td><:img_src(@ThBord_RT):></td>
							</tr> <tr>
								<td><:img_src(@ThBord_L):></td>
								<td><:img_src(@ThBord_R):></td>
							</tr> <tr>
								<td><:img_src(@ThBord_LB):></td>
								<td><:img_src(@ThBord_RB):></td>
							</tr> <tr>
								<td colspan='3'><:img_src(@ThBord_BL):><:img_src(@ThBord_B):><:img_src(@ThBord_BR):></td>
							</tr>
						</table>

#c// Two corners
<: } elsif (@ThBord_TL) { _:>
						<nobr><:img_src(@ThBord_TL):><:img_src(@ThBord_T):><:img_src(@ThBord_TR):></nobr><br />
						<nobr><:img_src(@ThBord_L):><a href=<:=Image_URL():>><:pImage_Src():></a><:img_src(@ThBord_R):></nobr><br />
						<nobr><:img_src(@ThBord_BL):><:img_src(@ThBord_B):><:img_src(@ThBord_BR):></nobr><br />

#c// No corners
<: } else { _:>
						<a href=<:=Image_URL():>><:pImage_Src():></a><br />
<: } _:>
					</div>
				</td>
			</tr>
		</table>

  <br/>

    <div align="center">
        <nobr><:img_src(@Bar_L); img_src(@Bar_M); img_src(@Bar_R);:></nobr>
    </div>

    <div id="credit-div">
        Theme by <a href="http://membres.lycos.fr/thocar/">thocar</a>.
        <: Credit() :> on <:=scalar localtime:>
    </div>

</body>

</html>
